<div class="col-md-10 col-md-offset-1 comment" id="comment-<%= comment.id %>">
  <div class="col-md-1">
    <%= gravatar_for comment.user %>
  </div>

  <div class="col-md-11" id="content-<%= comment.id %>">
    <div class="col-md-8">
      <%= link_to comment.user.name %><br>
      <%= comment.content %><br>
      <span class="timestamp">
        <%= t "comment.posted_ago", time: time_ago_in_words(comment.created_at) %>
      </span>
    </div>

    <div class="col-md-4">
      <% if current_user.current_user? comment.user %>
        <%= link_to edit_comment_path(comment), remote: true do %>
          <i class="fa fa-pencil-square-o"></i>
          <%= t "buttons.edit" %>
        <% end %> |
        <%= link_to comment, method: :delete, remote: true,
          data: {confirm: t("confirm")} do %>
          <i class="fa fa-trash-o"></i>
          <%= t "buttons.delete" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
